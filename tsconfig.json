{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@globalComps/*": ["globals/components/*"],
      "@globals/*": ["globals/*"],
      "@redux/*": ["redux/*"],
      "@screens/*": ["screens/*"],
      "@utils/*": ["utils/*"],
      "@/*": ["*"]
    },
    "typeRoots": ["./node_modules/@types", "./globals/components/ckeditor4-react.d.ts"]
  },
  "include": ["src"]
}