{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler Compatibility */
    "moduleResolution": "node", // Use "node" for CRA, "bundler" for Vite
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    /* Import Alias */
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@globalComps/*": ["globals/components/*"],
      "@globals/*": ["globals/*"],
      "@redux/*": ["redux/*"],
      "@screens/*": ["screens/*"],
      "@utils/*": ["utils/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src"]
}
